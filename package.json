{
    "name": "@weichwarenprojekt/wersion",
    "version": "0.3.0",
    "description": "A cli tool and lib to automatically versioning your projects.",
    "keywords": [
        "version",
        "semver",
        "semantic",
        "release",
        "tagging",
        "cli",
        "CI",
        "CD"
    ],
    "bin": "dist/wersion.js",
    "types": "./dist/models/wersion-config.model.d.ts",
    "repository": "https://github.com/Weichwarenprojekt/wersion.git",
    "author": "Weichwarenprojekt <info@weichwarenprojekt.de> (https://weichwarenprojekt.de/)",
    "contributors": [
        "Stefan Rink <stefan.rink@weichwarenprojekt.de> (https://weichwarenprojekt.de/)"
    ],
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "node esbuild.js && tsc --emitDeclarationOnly",
        "cli": "yarn build && node dist/wersion.js",
        "postinstall": "husky install",
        "prepack": "npx pinst --disable",
        "postpack": "npx pinst --enable",
        "test": "yarn build && jest",
        "coverage": "yarn build && jest --coverage"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@types/fs-extra": "^9.0.13",
        "@types/inquirer": "^9.0.3",
        "@types/jest": "^29.2.4",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "@weichwarenprojekt/configuration": "^0.1.4",
        "esbuild": "^0.17.10",
        "eslint": "latest",
        "husky": "^8.0.0",
        "jest": "^29.3.1",
        "memfs": "^3.4.13",
        "prettier": "^2.8.1",
        "terser-webpack-plugin": "^5.3.6",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.4",
        "unionfs": "^4.4.0"
    },
    "packageManager": "yarn@3.3.0",
    "dependencies": {
        "@weichwarenprojekt/ts-importer": "^0.1.5",
        "chalk": "^4.1.2",
        "commander": "^9.4.1",
        "fs-extra": "^11.1.0",
        "inquirer": "^8.2.5",
        "lodash": "^4.17.21",
        "semver": "^7.3.8",
        "simple-git": "^3.15.1"
    }
}
