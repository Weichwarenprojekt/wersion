{
    "compilerOptions": {
        "resolveJsonModule": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
